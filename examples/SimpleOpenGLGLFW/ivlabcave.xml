	<TopLeft>…</TopLeft>
	<TopRightt>…</TopRight>
	<BottomLeft>…</BottomLeft>
	<BottomRight>…</BottomRight>
</RightNode>

<FloorNode>
	<Type>VRWindowNode</Type>
	<Children>TrackingNode</Children>

	<XOffset>0</XOffset>
