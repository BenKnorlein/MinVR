  <VRWindowToolkits type="stringarray">GLFWToolkit</VRWindowToolkits>
  <VRGraphicsToolkits type="stringarray">OpenGLToolkit</VRGraphicsToolkits>
  <VRPlugins type="stringarray">GLFWPlugin,OpenGLPlugin</VRPlugins>

